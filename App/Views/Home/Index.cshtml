@{
    ViewData["Title"] = "Home Page";
    var name = "";
}

    <div class="landing-page text-center">
        <div class="row">
            <div class="col-12" style="margin: 150px 0">
                <h1 class="display-1">Welcome to LoL Stats app</h1>
                <h2 class="display-6">Search summoner profiles via our Poro search</h2>
            </div>

            <div class="col-3">
                <img src="~/img/poro-blush.png" alt="Poro blush" width="200"/>
            </div>

            <div class="col-3">
                <img src="~/img/poro-love.png" alt="Poro love" width="200"/>
            </div>

            <div class="col-3">
                <img src="~/img/poro-laugh.png" alt="Poro laugh" width="200"/>
            </div>

            <div class="col-3">
                <img src="~/img/poro-sad.png" alt="Poro sad" width="200"/>
            </div>

            <div class="col-2"></div>
            <div class="col-8">
                @await Html.PartialAsync("_SearchPartial", new SearchBoxModel())
            </div>
        </div>

    </div>
